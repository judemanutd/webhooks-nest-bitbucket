{
  "name": "webhooks-nest-bitbucket",
  "version": "0.0.1",
  "description": "Bitbucket weebhook listener for auto deploy",
  "author": "Jude Fernandes",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start-alternate": "npx ts-node-dev --respawn --notify=false src/server.ts",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "tslint -p tsconfig.json -c tslint.json"
  },
  "dependencies": {
    "@nestjs/common": "^6.8.3",
    "@nestjs/core": "^6.8.3",
    "@nestjs/platform-express": "^6.8.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "helmet": "^3.21.1",
    "moment-timezone": "^0.5.27",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.10.5",
    "@nestjs/schematics": "^6.7.0",
    "@nestjs/testing": "^6.8.3",
    "@types/body-parser": "^1.17.1",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/helmet": "0.0.44",
    "@types/moment-timezone": "^0.5.12",
    "@types/node": "^12.11.1",
    "@types/request": "^2.48.3",
    "@types/request-promise-native": "^1.0.17",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2",
    "pretty-quick": "^2.0.0",
    "ts-loader": "^6.2.0",
    "ts-node": "^8.4.1",
    "ts-node-dev": "^1.0.0-pre.32",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.6.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{ts}": [
        "npx tslint --fix",
        "git add"
      ]
    },
    "ignore": [
      "./public",
      "./environment",
      "./node_modules",
      "./dist",
      "./coverage"
    ]
  }
}
